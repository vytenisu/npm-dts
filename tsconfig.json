{
	"compilerOptions": {
		"target": "ES5",
		"lib": ["es2015", "es2017", "dom"],
		"sourceMap": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"noImplicitUseStrict": true,
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": [
		"./**/*.ts"
	],
	"exclude": [
		"**/*.test.ts",
		"node_modules",
		"bower_components",
		"cache",
		"build",
		"static"
	]
}
